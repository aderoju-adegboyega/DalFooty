<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ImageView
        android:id="@+id/result_home_logo"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="@string/home_team_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/result_home_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home_team"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/result_home_logo"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/result_away_logo"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="@string/away_team_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/result_away_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/away_team"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/result_away_logo"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/result_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/score"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/result_home_name"
        app:layout_constraintEnd_toStartOf="@+id/result_away_name"
        app:layout_constraintStart_toEndOf="@+id/result_home_name"
        app:layout_constraintTop_toTopOf="@+id/result_home_name" />

    <TextView
        android:id="@+id/result_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/date"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result_home_name" />

</androidx.constraintlayout.widget.ConstraintLayout>

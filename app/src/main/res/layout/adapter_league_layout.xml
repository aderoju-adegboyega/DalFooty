        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/cardview_dark_background" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
